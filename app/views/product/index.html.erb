<h1>Продукция:</h1>

<table>
  <tr>
    <th width="70"></th>
    <th width="50"></th>
    <th width="50"></th>
    <th width="100"></th>
  </tr>

  <% @products.each do |product| %>
      <tr>
        <td width="70"><%= image_tag(product.images[0] ? product.images[0].url(:thumb) : image_url('no-image.png')) %></td>
        <td><%= product.name %></td>
        <td>Цена: <%= product.price %></td>
        <td><%= link_to 'Посмотреть', product_path(product) %></td>
        <td><%= link_to 'Купить', cart_add_path(id: product.id), remote: true %></td>
      </tr>
  <% end %>

</table>

<% if init_cart %>
    <hr>
    <%= init_cart.id %>
    <table>
      <tr>
        <th width="70">Товар</th>
        <th width="50">Кво</th>
        <th width="50">Цена</th>
        <th width="100">Сумма</th>
      </tr>

      <% init_cart.line_items.each do |product| %>
          <tr>
            <% @product = Product.find(product.product_id) %>
            <td><%= @product.name %></td>
            <td><%= product.quantity %></td>
            <td><%= @product.price %></td>
          </tr>
      <% end %>

    </table>
<% end %>