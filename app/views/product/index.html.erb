<h1>Продукция:</h1>

<table>
  <tr>
    <th width="70"></th>
    <th width="50"></th>
    <th width="50"></th>
    <th width="100"></th>
  </tr>

  <% @products.each do |product| %>
      <tr>
        <td width="70"><%= image_tag(product.images[0] ? product.images[0].url(:thumb) : image_url('no-image.png')) %></td>
        <td><%= product.name %></td>
        <td>Цена: <%= product.price %></td>
        <td><%= link_to 'Посмотреть', product_path(product) %></td>
        <td><%= link_to 'Купить', cart_add_path(id: product.id) %></td>
      </tr>
  <% end %>

</table>

<% if init_cart %>
    <hr>

    <% if init_cart.line_items.length > 0 %>

    <%= init_cart.id %>
    <table>
      <tr>
        <th width="70">Товар</th>
        <th width="50">Кво</th>
        <th width="50">Цена</th>
        <th width="100">Сумма</th>
        <th></th>
      </tr>
      <% @all_summ = 0 %>
      <% init_cart.line_items.each do |product| %>
          <tr>
            <% @product = Product.find(product.product_id) %>
            <td><%= @product.name %></td>
            <td><%= product.quantity %></td>
            <td><%= @product.price %></td>
            <td><%= @product.price*product.quantity %></td>
            <td><%= link_to 'Добавити',cart_add_path(id: @product.id) %> <%= link_to 'Зменшити',cart_remove_one_path(id: @product.id) %> <%= link_to 'Удалить',cart_remove_path(id: @product.id) %></td>
            <% @all_summ += @product.price*product.quantity %>
          </tr>
      <% end %>

      <tr>
        <td></td>
        <td></td>
        <td><strong>Итого:</strong></td>
        <td><strong><%= @all_summ  %></strong></td>
      </tr>



    </table>

        <%= link_to 'Оформить заказ',order_show_path(id: init_cart) %>
    <% end %>

<% end %>